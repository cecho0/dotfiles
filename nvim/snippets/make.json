{
    "Make Binary Build Template": {
      "prefix": "binary_code",
      "body": [
        "#############################",
        "## C Makefile bin template ##",
        "#############################",
        "",
        ".PHONY : all clean rebuild",
        "",
        "### app ###",
        "APP_NAME := app",
        "",
        "### compile options ###",
        "CC := gcc",
        "CXX := g++",
        "CFLAGS := -c -Wall -Werror -g",
        "STATIC := -static",
        "MACRO :=",
        "LIBS :=",
        "",
        "### dir ###",
        "PROJECT_DIR := $(shell pwd)",
        "BIN_DIR := bin",
        "SRC_DIR := src",
        "OBJ_DIR := objs",
        "DEP_DIR := deps",
        "DIRS := $(BIN_DIR) $(OBJ_DIR) $(DEP_DIR)",
        "APP_NAME := $(addprefix $(BIN_DIR)/, $(APP_NAME))",
        "",
        "### src files ###",
        "SRCS := $(wildcard $(SRC_DIR)/*.c)",
        "",
        "### src files not include dir ###",
        "ONLY_FILE := $(notdir $(SRCS))",
        "",
        "### obj files ###",
        "OBJS := $(ONLY_FILE:.c=.o)",
        "OBJS := $(addprefix $(OBJ_DIR)/, $(OBJS))",
        "",
        "### dep files ###",
        "DEPS := $(ONLY_FILE:.c=.dep)",
        "DEPS := $(addprefix $(DEP_DIR)/, $(DEPS))",
        "",
        "### cmd ###",
        "MKDIR := mkdir",
        "RM := rm",
        "RM_FLAGS = -rf",
        "",
        "### rules ###",
        "all: $(OBJ_DIR) $(DEP_DIR) $(BIN_DIR) $(APP_NAME)",
        "",
        "ifeq (\"$(MAKECMDGOALS)\", \"all\")",
        "-include $(DEPS)",
        "endif",
        "",
        "ifeq (\"$(MAKECMDGOALS)\", \"\")",
        "-include $(DEPS)",
        "endif",
        "",
        "$(APP_NAME): $(OBJS)",
        "        $(CC) -o $@ $^",
        "        @echo \"Success! Target => $@\"",
        "",
        "$(DIRS):",
        "        $(MKDIR) $@",
        "",
        "$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c",
        "        $(CC) -o $@ -c $(filter %.c, $^)",
        "",
        "ifeq (\"$(wildcard $(DEP_DIR))\", \"\")",
        "$(DEP_DIR)/%.dep: $(DEP_DIR) $(SRC_DIR)/%.c",
        "else",
        "$(DEP_DIR)/%.dep: $(SRC_DIR)/%.c",
        "endif",
        "        @echo \"Creating $@ ...\"",
        "        @set -e; \"",
        "                $(CC) -MM -E $(filter %.c, $^) | sed 's,\\(.*\\)\\.o[ : ]*,objs\/\\1.o $@ : ,g' > $@",
        "",
        "rebuild:",
        "        @$(MAKE) clean",
        "        @$(MAKE) all",
        "",
        "clean:",
        "        $(RM) $(RM_FLAGS) $(DIRS)",
        "",
        "test:",
        "        @echo \"this is test target\""
      ],
      "description": "Make Binary Build Template"
    },
    "Add define in begin and end of c/c++ header file": {
      "prefix": "header_define",
      "body": [
        "#ifndef _${TM_FILENAME_BASE}_H_",
        "#define _${TM_FILENAME_BASE}_H_",
        "",
        "$0",
        "",
        "#endif ${BLOCK_COMMENT_START} ${TM_FILENAME} ${BLOCK_COMMENT_END}",
        "\n"
      ],
      "description": "Add header file define"
    }
}
